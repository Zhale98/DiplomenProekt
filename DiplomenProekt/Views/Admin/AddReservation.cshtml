@model DiplomenProekt.Data.DbModels.Rezervacii

@{
    ViewData["Title"] = "AddReservation";
}

<h1>AddReservation</h1>

<h4>Rezervacii</h4>
<hr />
<style>
    body {
        background-image: url('/img/88.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100% 100%;
    }
</style>
<div class="row">
    <div class="bungalo_reserve_box">
        <div class="col-md-12">
            <form asp-action="AddReservation">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" id="room_type" onchange="finalCost()">
                    <label asp-for="Smqna" class="control-label">Смяна</label>
                    <input asp-for="Smqna" class="form-control" />
                    <span asp-validation-for="Smqna" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ot" class="control-label">От дата</label>
                    <input asp-for="Ot" class="form-control" />
                    <span asp-validation-for="Ot" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Do" class="control-label">До дата</label>
                    <input asp-for="Do" class="form-control" />
                    <span asp-validation-for="Do" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dni" class="control-label">Брой дни</label>
                    <input asp-for="Dni" class="form-control" />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bungalo" class="control-label">Бунгало №</label>
                    <input asp-for="Bungalo" class="form-control" />
                    <span asp-validation-for="Bungalo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ime" class="control-label">Име</label>
                    <input asp-for="Ime" class="form-control" />
                    <span asp-validation-for="Ime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Familiq" class="control-label">Фамилия</label>
                    <input asp-for="Familiq" class="form-control" />
                    <span asp-validation-for="Familiq" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Kategoriq" class="control-label">Категория</label>
                    <input asp-for="Kategoriq" class="form-control" />
                    <span asp-validation-for="Kategoriq" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Dete_7" class="control-label">Дете до 7год.</label>
                    <input asp-for="Dete_7" class="form-control" />
                    <span asp-validation-for="Dete_7" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dete_10" class="control-label">Дете(7-10год.)</label>
                    <input asp-for="Dete_10" class="form-control" />
                    <span asp-validation-for="Dete_10" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dete_12" class="control-label">Дете 10+</label>
                    <input asp-for="Dete_12" class="form-control" />
                    <span asp-validation-for="Dete_12" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cena" class="control-label">Обща сума</label>
                    <input asp-for="Cena" class="form-control" />
                    <span asp-validation-for="Cena" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    </div>

    <div>
        <a asp-action="ListReservacii">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
